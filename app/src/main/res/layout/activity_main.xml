<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:gravity="center"
    android:background="#03DAC5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="260dp"
            android:layout_height="120dp"
            android:text="@string/app_titulo"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="196dp"
        android:layout_marginStart="1dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/fruta"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="-8dp"
        android:hint="CANTIDAD"
        android:drawableLeft="@drawable/pesos"
        android:inputType="text"
        android:pointerIcon="alias" />

    <Spinner
        android:id="@+id/spinnerCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:id="@+id/spinnerPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textViewImprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"/>

</LinearLayout>